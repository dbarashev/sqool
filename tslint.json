{
    "rules": {
        "align": [true, "parameters", "members", "elements", "statements"],
        "array-type": [true, "generic"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "arrow-return-shorthand": true,
        "ban-types": [true,
            ["Array<.*>", "Use List<T> (preferably) or MutableList<T>"],
            ["ReadableArray<.*>", "Use List<T>"]
        ],
        "callable-types": true,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "curly": [true, "ignore-same-line"],
        "deprecation": true,
        "encoding": true,
        "eofline": true,
        "file-header": [true, "Copyright \\(C\\) 20\\d{2} BarD Software"],
        "indent": [true, "spaces", 2],
        "interface-over-type-literal": true,
        "jsdoc-format": [true, "check-multiline-start"],
        "linebreak-style": [true, "LF"],
        "max-line-length": [true, 120],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    {"name": "method", "kinds": ["static-method", "instance-method"]}
                ]
            }
        ],
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true,
        "no-conditional-assignment": true,
        "no-console": {
            "severity": "warning",
            "options": ["log", "error"]
        },
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-imports": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-eval": true,
        "no-for-in-array": true,
        "no-internal-module": true,
        "no-invalid-template-strings": true,
        "no-irregular-whitespace": true,
        "no-object-literal-type-assertion": true,
        "no-parameter-reassignment": true,
        "no-redundant-jsdoc": true,
        "no-require-imports": true,
        "no-sparse-arrays": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-class": true,
        "no-unnecessary-initializer": true,
        "no-unnecessary-qualifier": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [true, "check-catch", "check-else", "check-finally", "check-open-brace", "check-whitespace"],
        "ordered-imports": true,
        "prefer-conditional-expression": true,
        "prefer-const": true,
        "prefer-function-over-method": [true, "allow-public", "allow-protected"],
        "prefer-method-signature": true,
        "prefer-switch": true,
        "quotemark": [true, "avoid-escape", "avoid-template", "double"],
        "semicolon": [true, "always"],
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "type-literal-delimiter": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "unified-signatures": true,
        "use-isnan": true,
        "variable-name": [true, "allow-pascal-case", "ban-keywords", "check-format"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-preblock",
            "check-separator",
            "check-type",
            "check-type-operator"
        ]
    }
}
